#include<stdio.h>
#include<stdlib.h>

int main() 
{ 
	const int n = 20;                // количество элементов в массиве
	int *mas = (int*)malloc(n*sizeof(int));	 // объявление указателя на массив и выделение динамической памяти для массива
	// Заполним массив псевдо случайными числами 
	int k=0;		                   	// номер набора псевдо случайных чисел
	printf("\n enter k: ");         // каждый раз, введя другое число, получим другие значения в массиве
    scanf("%i", &k);
	srand(k);		                  	// функция задает набор псевдо случайных чисел
    
for(int i=0;i<n;i++)	        	//  заполняем массив
{	*(mas+i)=rand()%100+1;	// чтобы значкния были не очень большими, берем остаток от деления на 100+1
                            // тогда в массиве будут числа от 1 до 100	
	printf ("%i \t", *(mas+i));   // выводим содержимое массива

}
printf("\n");
free(mas);             // освобождение динамической памяти
	return 0; 
 
 }
